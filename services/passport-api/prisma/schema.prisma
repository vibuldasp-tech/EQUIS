generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DppItem {
  id             String    @id @default(cuid())
  title          String
  brand          String
  unit           String
  identifierGtin String?
  identifierSku  String?
  digitalLinkUri String
  data           String
  visibility     String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  versions       Version[]
  evidences      Evidence[]
}

model Version {
  id        String   @id @default(cuid())
  number    Int
  diff      String
  createdBy String
  createdAt DateTime @default(now())
  dppItem   DppItem  @relation(fields: [dppItemId], references: [id])
  dppItemId String
}

model Evidence {
  id        String   @id @default(cuid())
  dppItem   DppItem  @relation(fields: [dppItemId], references: [id])
  dppItemId String
  key       String
  url       String
  sha256    String
  createdAt DateTime @default(now())
}